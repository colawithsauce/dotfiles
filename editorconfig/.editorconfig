# 顶部声明
root = true

# 默认设置（所有文件）
[*]
indent_style = space
indent_size = 2
charset = utf-8
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true

# 额外为特定语言设置（可选）
[*.py]
indent_size = 2

[*.{c,cpp,h,hpp}]
indent_size = 2

[*.js]
indent_size = 2

[*.ts]
indent_size = 2

[*.html]
indent_size = 2

[*.css]
indent_size = 2
